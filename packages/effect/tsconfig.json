{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "types": ["vitest"],
    "composite": true,
    "outDir": "dist",
    "rootDir": "../",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "noEmit": false
  },
  "include": ["src/**/*.ts", "../internal/**/*.ts"]
}
